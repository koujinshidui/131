.zm-edit-components-fontStyle{
    height: 30px;
    &>div{
        float: left;
    }
    &>div:nth-child(1){
        width: 100px;
        height: 30px;
        margin-right: 1px;
    }
    &>div:nth-child(2){
        width: 65px;
        height: 30px;
        margin-right: 10px;
    }
    &>div:nth-child(3){
        width: 30px;
        height: 30px;
        margin-right: 10px;
    }
    &>div:nth-child(4){
        width: 30px;
        height: 30px;
        margin-right: 10px;
    }
    &>div:nth-child(5){
        width: 30px;
        height: 30px;
    }
}
.zm-edit-components-public-style{
    height: 61px;
    overflow: hidden;
    .zm-edit-text-title{
        height: 60px;
        line-height: 60px;
        float: left;
    }
    .sliderWrap{
        float: left;
    }
    .colorWrap{
        float: right;
        margin-top: 15px;
    }
    i{
        display: inline-block;
        height: 60px;
        float: left;
        line-height: 60px;
    }
}
//设置弹窗样式
.zm-edit-component-open-popup{
    height: auto;
    &>div:nth-child(1){
        width: 100%;
        height: 40px;
        .zm-edit-text-title{
            width: 76px;
            height: 40px;
            line-height: 40px;
            float: left;
        }
        .zm-edit-popup-onOff{
            width: 130px;
            height: 40px;
            float: left;
            .zm-switch-box{
                margin-top: 10px;
            }
        }
        .zm-edit-popup-setting{
            width: 80px;
            height: 40px;
            float: left;
            span{
                display: block;
                width: 60px;
                height: 20px;
                line-height: 20px;
                border-radius: 10px;
                margin-top: 10px;
                margin-left: 20px;
                background-color: #eee;
                text-align: center;
            }
        }
    }
    &>div:nth-child(2){
        width: 100%;
        height: auto;
        .zm-edit-popup-list{
            width: 100%;
            height: auto;
            li{
                width: 100%;
                height: 20px;
                line-height: 20px;
                i{
                    display: inline-block;
                    width: 20px;
                    height: 20px;
                    text-align: center;
                    vertical-align: middle;
                    color: #4AB1A7;
                    line-height: 20px;
                }
                span{
                    display: inline-block;
                    overflow: hidden;
                    width: 266px;
                    height: 20px;
                    vertical-align: middle;
                }
            }
        }
    }
}
//列表样式
.zm-edit-components-list{
    font-size: 12px;
    background-color: @baseColorGray5;
    overflow: hidden;
    padding: 5px 5px 50px;
    position: relative;
    .zm-edit-components-list-wrap{
        width: 100%;
        height: 100%;
        overflow: hidden;
        li{
            display: flex;
            overflow: hidden;
            .zm-edit-components-list-unit{
                flex: 1;
                min-width: 180px;
                margin-right: 10px;
                margin-bottom: 10px;
                background-color: #fff;
                box-shadow: 0 0 0 rgba(0,0,0,1);
                padding: 10px;
                overflow: hidden;
                .zm-edit-components-list-unit-image{
                    width: 100%;
                    height: auto;
                    overflow: hidden;
                    .zm-edit-components-list-unit-image-box{
                        width: 100%;
                        height: 0;
                        padding-bottom: 100%;
                        position: relative;
                        overflow: hidden;
                        .zm-edit-components-list-unit-image-wrap{
                            width: 100%;
                            height: 100%;
                            position: absolute;
                            top: 0;
                            left: 0;
                            overflow: hidden;
                            .zm-edit-components-list-unit-image-layer{
                                width: 100%;
                                height: 100%;
                                position: absolute;
                                top: 50%;
                                left: 50%;
                                transform: translate(-50%,-50%);
                                overflow: hidden;
                            }
                        }
                    }
                }
            }
            .zm-edit-components-list-unit:last-child{
                margin-right: 0!important;
            }
        }
    }
    .zm-edit-components-list-loadMore{
        width: 100%;
        height: 50px;
        position: absolute;
        bottom: 0;
        left: 0;
        overflow: hidden;
        span{
            display: block;
            width: 120px;
            height: 35px;
            background-color: #4ab3a5;
            color: #fff;
            font-family: "Arial";
            font-size: 16px;
            border-radius: 20px;
            line-height: 35px;
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            cursor: pointer;
        }
    }
    .set_border{
        border: 1px solid #000;
    }
}