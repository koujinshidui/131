@import "base";
/*  family 样式  */
.zm-edit-components-Family{
    height: 61px;
    .zm-edit-text-title{
        height: 60px;
        line-height: 60px;
        float: left;
    }
    .zm-edit-components-Family-wrap{
        float: left;
        margin-top: 15px;
    }
}
/*  阴影组件  */
.zm-edit-components-shadow{
    height: 301px;
    position: relative;
    &>div{
        width: 100%;
        height: 60px;
    }
    .zm-edit-components-shadow-O{
        .zm-edit-text-title{
            height: 60px;
            line-height: 60px;
            vertical-align: middle;
        }
        label{
            vertical-align: middle;
        }
    }
    .zm-edit-components-shadow-W{
        height: 240px;
        background-color: @shadowColor;
        position: absolute;
        bottom: 0;
        left: 0;
        z-index: @shadowIndex;
    }
}
/* 下拉框样式 */
.zm-edit-components-select{
    height: 30px;
    border: 1px solid @baseColorGray3;
    border-radius: 5px;
    position: relative;
    cursor: pointer;
    .zm-edit-components-select-show{
        width: 100%;
        height: 28px;
        display: flex;
        .zm-edit-components-select-val{
            flex: 1;
            width: 100%;
            line-height: 28px;
            padding: 0 10px;
            overflow: hidden;

        }
        .zm-edit-components-select-icon{
            width: 20px;
            line-height: 30px;
            text-align: center;
        }
    }
    .zm-edit-components-select-hide{
        width: 100%;
        height: 150px;
        box-shadow: 0 0 10px @baseColorGray3;
        background-color: @baseColorWhite;
        z-index: 666;
        border-radius: 5px;
        position: absolute;
        top: 30px;
        left: 0;
        overflow: hidden;
        display: none;
        li{
            width: 100%;
            height: 30px;
            line-height: 30px;
            padding: 0 10px;
            overflow: hidden;
        }
        li:hover{
            background-color: @baseColor;
        }
    }
    .zm-edit-components-family-val{
        position: absolute;
        top: 0;
        left: 0;
        display: inline-block;
        width: 80%;
        height: 28px;
        padding-left: 10px;
        overflow: hidden;
    }
    .zm-edit-components-family-icon{
        position: absolute;
        top: 0;
        right: 0;
        display: inline-block;
        width: 20%;
        height: 28px;
        line-height: 25px;
        text-align: center;
    }
    .zm-edit-components-family-list{
        position: absolute;
        top: 28px;
        left: 0;
        width: 100%;
        height: 270px;
        background-color: #fff;
        z-index: 6666;
        border-radius: 5px;
        box-shadow: 0 0 10px 0 #eee;
        overflow-y: auto;
        border: @baseColorGray3;
        display: none;
        li{
            width: 100%;
            height: 31px;
            border-bottom: 1px dotted @baseColorGray3;
            line-height: 30px;
            padding-left: 10px;
        }
        li:hover{
            background-color: #00c3b0;
        }
    }
}
.zm-edit-components-bold{
    width: 30px;
    height: 30px;
    border-radius: 5px;
    position: relative;
    cursor: pointer;
    overflow: hidden;
    i{
        display: inline-block;
        width: 30px;
        height: 30px;
        position: absolute;
        top: 0;
        left: 0;
        line-height: 30px;
        text-align: center;
        font-size: 18px;
    }
    i:hover{
        background-color: @baseColorGray2;
    }
}
.zm-edit-components-italic{
    width: 30px;
    height: 30px;
    border-radius: 5px;
    overflow: hidden;
    position: relative;
    cursor: pointer;
    i{
        display: inline-block;
        width: 30px;
        height: 30px;
        position: absolute;
        top: 0;
        left: 0;
        line-height: 30px;
        text-align: center;
        font-size: 18px;
    }
    i:hover{
        background-color: @baseColorGray2;
    }
}

