@import "base";
/*   选项卡基础样式   */
.zm-edit-components-tabs{
  width: 300px;
  height: 180px;
  font-size: 12px;
  background-color: @baseColorWhite;
  color: @baseColorBlack;
  border: 1px solid @baseColorGray3;
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 0 rgba(0,0,0,1);
  .zm-edit-components-tabs-tit{
    width: 100%;
    height: 36px;
    overflow: hidden;
    display: flex;
    background-color: #4ab1a7;
    border-style: solid;
    .zm-edit-components-tabs-tit-channel{
      height: 100%;
      width: 20%;
      cursor: pointer;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
    }
    .zm-edit-components-tabs-tit-lab{
      width: 100%;
      height: 100%;
      flex: 1;
      display: flex;
      li{
        height: 100%;
        overflow: hidden;
        cursor: pointer;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0 5px;
      }
    }
  }
  .zm-edit-components-tabs-cont{
    width: 100%;
    height: 100%;
    position: relative;
    flex: 1;
    border-style: solid;
    background-color: rgba(255,255,255,1);
    &>div{
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: none;
      border: 0;
    }
    &>div:first-child{
      display: block;
    }
  }
}
/* 选项卡样式 01*/
.zm-edit-components-tabs_01{
  width: 300px;
  height: 180px;
  font-size: 12px;
  background-color: rgba(255,255,255,1);
  color: #000;
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 0 rgba(0,0,0,1);
  .zm-edit-components-tabs-tit{
    width: 100%;
    height: 24px;
    overflow: hidden;
    display: flex;
    border-style: solid;
    .zm-edit-components-tabs-tit-channel{
      height: 100%;
      width: 20%;
      cursor: pointer;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
    }
    .zm-edit-components-tabs-tit-lab{
      width: 100%;
      height: 100%;
      flex: 1;
      display: flex;
      li{
        height: 100%;
        overflow: hidden;
        cursor: pointer;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0 5px;
        margin-right: 5px;
        background: #4ab1a7;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
      }
    }
  }
  .zm-edit-components-tabs-cont{
    flex: 1;
    overflow: hidden;
    position: relative;
    border-style: solid;
    box-shadow: 1px 1px 5px rgba(204,204,204,1);
    background-color: rgba(255,255,255,1);
    &>div{
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: none;
      border: 0;
    }
    &>div:first-child{
      display: block;
    }
  }
}
/*   频道开关   */
.zm-edit-components-tabs-channel{
  height: 61px;
  position: relative;
  .zm-edit-text-title{
    height: 61px;
    float: left;
    line-height: 61px;
  }
  .zm-switch-box{
    float: left;
    margin-top: 20px;
  }
  .zm-edit-components-tabs-channel-shadow{
    width: 265px;
    height: 435px;
    position: absolute;
    top: 61px;
    left: 0;
    z-index: @shadowIndex;
    background-color: @shadowColor;
  }
}
/*   频道链接   */
.zm-edit-components-tabs-channel-link{
  height: 126px;
  .zm-edit-components-tabs-channel-link-name{
    height: 60px;
    .zm-edit-text-title{
      height: 60px;
      line-height: 60px;
      float: left;
    }
    input{
      width: 180px;
      margin-top: 15px;
      float: left;
    }
  }
  .zm-edit-components-tabs-channel-link-link{
    height: 30px;
    .zm-edit-text-title{
      height: 30px;
      line-height: 30px;
      float: left;
    }
    .zm-switch-box{
      float: left;
      margin-top: 5px;
    }
    .zm-set-link{
      display: inline-block;
      width: 60px;
      height: 20px;
      border-radius: 10px;
      line-height: 20px;
      text-align: center;
      background-color: @baseColorGray3;
      margin-top: 5px;
      float: right;
    }
    .choiceColor {
      color: @baseColorWhite !important;
      background-color: @baseColor !important;
    }
    .choiceColor:hover {
      background-color: @baseColorLight0 !important;
    }
  }
  .zm-edit-components-tabs-channel-link-text{
    height: 35px;
    .zm-edit-text-title{
      height: 35px;
      line-height: 30px;
      float: left;
    }
    .zm-edit-components-tabs-channel-link-text-name{
      display: inline-block;
      width: 180px;
      height: 30px;
      float: left;
      color: @baseColor;
      overflow: hidden;
    }
  }
}
/*  上门楣  */
.zm-edit-components-tabs-top-border{
  height: 141px;
  position: relative;
  .zm-edit-components-tabs-top-border-onOff{
    width: 100%;
    height: 40px;
    .zm-edit-text-title{
      height: 40px;
      line-height: 40px;
    }
  }
  .zm-edit-components-tabs-top-border-col{
    height: 50px;
  }
  .zm-edit-components-tabs-top-border-hei{
    height: 50px;
  }
  .zm-edit-components-tabs-top-border-shadow{
    width: 265px;
    height: 100px;
    background-color: @shadowColor;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: @shadowIndex;
  }
  .zm-edit-components-tabs-temporary{
    display: none;
    width: 265px;
    height: 121px;
    position: absolute;
    top: -122px;
    left: 0;
    z-index: @shadowIndex;
    background-color: rgba(255,255,255,.8);
  }
}
/*  下门楣  */
.zm-edit-components-tabs-bottom-border{
  height: 141px;
  position: relative;
  .zm-edit-components-tabs-bottom-border-onOff{
    width: 100%;
    height: 40px;
    .zm-edit-text-title{
      height: 40px;
      line-height: 40px;
    }
  }
  .zm-edit-components-tabs-bottom-border-col{
    height: 50px;
  }
  .zm-edit-components-tabs-bottom-border-hei{
    height: 50px;
  }
  .zm-edit-components-tabs-bottom-border-shadow{
     width: 265px;
     height: 100px;
     background-color: @shadowColor;
     position: absolute;
     bottom: 0;
     left: 0;
     z-index: @shadowIndex;
  }
  .zm-edit-components-tabs-temporary{
    display: none;
    width: 265px;
    height: 121px;
    position: absolute;
    top: -263px;
    left: 0;
    z-index: @shadowIndex;
    background-color: rgba(255,255,255,.8);
  }
}
/* link 样式 */
.zm-edit-components-tabs-link{
  height: auto;
  border-bottom: none;
  .zm-edit-components-tabs-lab{
    width: 100%;
    height: 61px;
    border-bottom: 1px dashed @baseColorGray4;
    &>span:nth-child(1){
      display: inline-block;
      float: left;
      width: 125px;
      height: 30px;
      border-right: @baseColorGray3;
      line-height: 30px;
      text-align: center;
      margin-top: 15px;
    }
    &>span:nth-child(2){
      display: inline-block;
      float: left;
      width: 70px;
      height: 30px;
      border-right: @baseColorGray3;
      line-height: 30px;
      text-align: center;
      margin-top: 15px;
    }
    &>span:nth-child(3){
      display: inline-block;
      float: left;
      width: 70px;
      height: 30px;
      line-height: 30px;
      text-align: center;
      margin-top: 15px;
    }
  }
  .zm-edit-components-tabs-cont{
    width: 100%;
    height: auto;
    .zm-edit-components-tabs-titleLink{
      width: 100%;
      height: 61px;
      border-bottom: 1px solid @baseColorGray3;
      .zm-edit-components-tabs-link-close{
        display: inline-block;
        float: left;
        width: 20px;
        height: 20px;
        font-size: 12px;
        line-height: 20px;
        text-align: center;
        border-radius: 10px;
        background-color: @baseColor;
        color: @baseColorWhite;
        cursor: pointer;
        margin: 20px 5px 0 0;
      }
      .zm-edit-components-tabs-link-close:hover{
        background-color: @baseColorLight0;
      }
      .zm-edit-components-tabs-text{
        width: 100px;
        height: 30px;
        margin-top: 15px;
        float: left;
      }
      .zm-switch-box{
        float: left;
        width: 50px;
        height: 20px;
        border-radius: 10px;
        margin: 20px 15px;
      }
      .zm-edit-components-tabs-popup{
        display: inline-block;
        width: 50px;
        height: 20px;
        border-radius: 10px;
        line-height: 20px;
        text-align: center;
        margin: 20px 0 0 10px;
        background-color: @baseColorGray3;
        color: @baseColorBlack;
      }
    }
    .zm-edit-components-tabs-titleLink:hover{
      background-color: #f0f0f0;
    }
  }
  .zm-edit-components-tabs-add{
    width: auto;
    height: 50px;
    line-height: 50px;
    div{
      width: 60px;
      height: 60px;
      background-color: @baseColor;
      color: @baseColorWhite;
      border-radius: 50%;
      margin: 35px;
      overflow: hidden;
      cursor: pointer;
      box-shadow: 0 0 10px @baseColor;
      animation: animate007 5s ease-in-out infinite alternate;
      i{
        display: block;
        width: 100%;
        height: 20px;
        line-height: 20px;
        text-align: center;
        margin-top: 10px;
      }
      span{
        display: block;
        width: 100%;
        height: 20px;
        line-height: 20px;
        text-align: center;
      }
    }
  }
  .zm-edit-components-tabs-add >div:hover{
    background-color: @baseColorLight0;
  }
}
@keyframes animate007 {
  50%{transform: scale(0.8)}
}
/*  对齐方式  */
.zm-edit-components-tabs-align{
  height: 224px;
  .zm-edit-components-text-title{
    display: inline-block;
    width: 100%;
    height: 41px;
    line-height: 40px;
    text-align: left;
    border-bottom: 1px dashed @baseColorGray4;
  }
  .zm-edit-components-tabs-radios-left{
    width: 100%;
    height: 61px;
    border-bottom: 1px dashed #eee;
    label{
      display: inline-block;
      width: 20px;
      height: 20px;
      border: @baseColorGray3;
      border-radius: 10px;
      margin: 20px 20px 0 0;
      position: relative;
      vertical-align: middle;
      cursor: pointer;
    }
    span{
      display: inline-block;
      width: 225px;
      height: 35px;
      background-color: #4ab1a7;
      border-radius: 5px;
      vertical-align: middle;
      margin-top: 13px;
      i{
        display: inline-block;
        width: 40px;
        height: 20px;
        line-height: 20px;
        text-align: center;
        border-right: 2px solid #fff;
        color: #fff;
        font-size: 16px;
        margin-top: 8px;
      }
      i:last-child{
        border-right: none;
      }
    }
    .pickOn:after{
      content: '';
      width: 10px;
      height: 10px;
      border-radius: 5px;
      background-color: #4ab1a7;
      position: absolute;
      top: 4px;
      left: 4px;
    }
  }
