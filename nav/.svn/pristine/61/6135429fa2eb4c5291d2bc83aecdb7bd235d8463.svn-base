/**************** 音频组件 播放面板 ********************/
.zm-edit-components-audio-player-intact{
  width: 300px;
  min-width: 180px;
  height: 60px;
  background-color: #4ab1a7;
  display: flex;
  padding: 5px;
  font-size: 12px;
  .zm-edit-components-audio-intact-player{
    flex: none;
    width: 50px;
    height: 50px;
    position: relative;
    .zm-edit-components-audio-box{
      width: 30px;
      height: 30px;
      position: absolute;
      top: 10px;
      left: 10px;
      .zm-edit-components-audio-wrap{
        width: 100%;
        height: 100%;
        border: 1px solid #fff;
        border-radius: 50%;
        cursor: pointer;
        svg{
          fill: #fff;
        }
      }
    }
  }
  .zm-edit-components-audio-intact-title{
    flex: none;
    width: auto;
    height: 50px;
    .intact-title-singer{
      width: auto;
      height: 25px;
      line-height: 30px;
    }
    .intact-title-name{
      width: auto;
      height: 25px;
      line-height: 20px;
    }
  }
  .zm-edit-components-audio-intact-other{
    flex: 1;
    .zm-edit-components-audio-intact-icon{
      width: 100%;
      height: 25px;
      &>span:nth-child(1){
        display: inline-block;
        width: 25px;
        height: 25px;
        float: right;
        cursor: pointer;
      }
      &>span:nth-child(2){
        display: inline-block;
        width: 25px;
        height: 25px;
        float: right;
        cursor: pointer;
      }
    }
    .zm-edit-components-audio-intact-totalTime{
      width: 100%;
      height: 25px;
      display: flex;
      justify-content: center;
      &>span{
        display: inline-block;
        height: 25px;
        line-height: 20px;
      }
    }
  }
}
/**************** 音频组件 面板列表 ********************/
.zm-edit-components-audio-player-album{
  width: 800px;
  min-width: 640px;
  height: auto;
  background-color: #eee;
  font-size: 12px;
  overflow: hidden;
  .zm-audio-player-panel{
    padding: 15px;
    width: 100%;
    height: 150px;
    background-color: #eee;
    .zm-audio-player-albumInfo{
      float: left;
      width: 300px;
      height: 100%;
      overflow: hidden;
      .player-album-cover{
        float: left;
        width: 120px;
        height: 120px;
        position: relative;
        margin-right: 10px;
        .album-cover-image{
          width: 120px;
          height: 120px;
          position: absolute;
          top: 0;
          left: 0;
          img{
            width: 100%;
            height: 100%;
            background-color: #747BE8;
          }
        }
        .zm-edit-components-audio-wrap{
          width: 60px;
          height: 60px;
          position: absolute;
          top: 30px;
          left: 30px;
          border: 1px solid #000;
          border-radius: 50%;
          background-color: #fff;
          cursor: pointer;
          svg{
            fill: #000;
          }
        }
      }
      .player-album-message{
        float: left;
        width: 170px;
        height: 120px;
        padding: 10px 0;
        &>p{
          display: block;
          width: 170px;
          height: 25px;
          overflow: hidden;
          line-height: 25px;
          text-align: left;
          span{
            display: inline-block;
            height: 25px;
          }
          a{
            display: inline-block;
            height: 25px;
          }
        }
      }
    }
    .zm-audio-player-otherInfo{
      float: right;
      width: 300px;
      height: 100%;
      .player-otherInfo-button{
        width: 100%;
        height: 60px;
        .otherInfo-button-top{
          width: 100%;
          height: 30px;
          .otherInfo-loadAlbum{
            display: block;
            width: 100px;
            height: 20px;
            line-height: 20px;
            text-align: center;
            float: right;
            background-color: #4ab3a5;
          }
        }
        .otherInfo-button-bottom{
          width: 100%;
          height: 30px;
          &>span{
            display: block;
            float: right;
            height: 20px;
            line-height: 20px;
            text-align: center;
            background-color: #4ab3a5;
            margin-left: 10px;
          }
          .otherInfo-loadChoice{
            width: 100px;
          }
          .otherInfo-invert{
            width: 50px;
          }
          .otherInfo-selectAll{
            width: 50px;
          }
        }
      }
      .player-otherInfo-message{
        width: 100%;
        height: 60px;
        border: 1px solid #ccc;
        border-left: none;
        border-right: none;
        text-align: right;
        position: relative;
        .otherInfo-message-wrap{
          width: 100%;
          height: 50px;
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%,-50%);
          &>span{
            display: inline-block;
            height: 40px;
            float: right;
            margin-top: 5px;
            i{
              display: block;
              width: 100%;
              height: 20px;
              line-height: 20px;
            }
            a{
              display: block;
              width: 100%;
              height: 20px;
              line-height: 20px;
              cursor: pointer;
            }
            a:hover{
              text-decoration: underline;
            }
          }
          .otherInfo-discuss{
            width: 80px;
            border-left: 1px solid #000;
          }
          .otherInfo-collect{
            width: 100px;
            padding-right: 20px;
            border-left: 1px solid #000;
          }
          .otherInfo-play{
            width: 120px;
            padding-right: 20px;
          }
        }
      }
    }
  }
  .zm-audio-player-list{
    width: 100%;
    height: auto;
    padding: 0 15px 15px;
    overflow: hidden;
    background-color: #eee;
    ul{
      width: 100%;
      height: auto;
      li{
        width: 100%;
        height: 36px;
        min-height: 36px;
        border-bottom: 1px solid #ccc;
        overflow: hidden;
        &>div{
          width: 100%;
          height: 100%;
          &>div{
            height: 100%;
            float: left;
            margin-right: 10px;
            overflow: hidden;
            display: flex;
            align-items: center;
          }
          .list-choice{
            width: 15px;
            i{
              width: 15px;
              height: 15px;
              border: 1px solid #4ab3a5;
              line-height: 15px;
              text-align: center;
              border-radius: 3px;
              color: #4ab3a5;
              cursor: pointer;
            }
          }
          .list-number{
            width: 18px;
          }
          .list-name{
            width: 135px;
          }
          .list-albumName{
            width: 120px;
          }
          .list-singer{
            width: 70px;
          }
          .list-time{
            width: 35px;
          }
          .list-icon{
            width: 60px;
            cursor: pointer;
            &>div{
              width: 50%;
              height: 50%;
              display: flex;
              justify-content: center;
              align-items: center;
            }
          }
          .list-load{
            width: 70px;
          }
          .list-playNumber{
            width: 80px;
            white-space: nowrap;
            overflow: hidden;
          }
          .list-loadNumber{
            width: 75px;
            white-space: nowrap;
            overflow: hidden;
            margin-right: 0;
          }
          a:hover{
            cursor: pointer;
            text-decoration: underline;
          }
        }
      }
    }
  }
}
