//样式选择
.zm-components-audio-method-styleSelect{
  height: 100px;
  .zm-edit-text-title{
    height: 30px;
    line-height: 30px;
  }
  .audio-style-list{
    width: 100%;
    height: 60px;
    background-color: #f1f9f8;
    .style-content{
      float: left;
      width: 225px;
      height: 100%;
      overflow: hidden;
      position: relative;
      ul{
        width: 1110px;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        li{
          margin-left: 10px;
          float: left;
          position: relative;
          cursor: pointer;
          margin-top: 10px;
        }
        li:after{
          content: "";
          width: 0;
          height: 0;
          border: 10px solid transparent;
          border-left-color: #000;
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-25%,-50%);
        }
        li:hover{
          box-shadow: 0 0 10px rgba(74,177,167,.8);
        }
        li:nth-child(1){
          width: 40px;
          height: 40px;
          border: 1px solid #4ab3a5;
          border-radius: 50%;
        }
        li:nth-child(2){
          width: 40px;
          height: 40px;
          background-color: #4ab3a5;
          border-radius: 50%;
        }
        li:nth-child(3){
