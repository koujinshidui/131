//选择音频
.zm-components-audio-method-choiceAudio{
  height: 80px;
  &>div:nth-child(1){
    height: 40px;
    .zm-edit-text-title{
      width: 120px;
      height: 40px;
      line-height: 40px;
    }
    i{
      display: inline-block;
      width: 60px;
      height: 20px;
      border-radius: 10px;
      margin-top: 10px;
      background-color: #f1f9f8;
      line-height: 20px;
      text-align: center;
      box-shadow:  0 0 5px rgba(204,204,204,0.8);
      cursor: pointer;
    }
    i:hover{
      background-color: #4ab3a5;
    }
  }
  &>div:nth-child(2){
    height: 40px;
    line-height: 40px;
    i{
      display: inline-block;
      width: 40px;
      height: 40px;
      vertical-align: middle;
      line-height: 40px;
