/* 颜色 */
@black: rgba(0,0,0,1);//#000
@white: rgba(255,255,255,1);//#fff
@grey: rgba(204,204,204,1);//#ccc
@eee: rgba(238,238,238,1);//#eee
@f8f8f8: rgba(248,248,248,1);//#f8f8f8
@ff7500: rgba(255,117,0,1);//#ff7500
@f0fcff: rgba(240,252,255,1);//#f0fcff
@a4e2c6: rgba(164,226,198,1);//#a4e2c6
@dbefed: rgba(219,239,237,1);//#dbefed 鼠标滑过提示框颜色

/* 边框 */
@border: 1px solid transparent;
@border-grey: 1px solid @eee;
@border-black: 1px solid @black;
@border2: 2px solid @ff7500;
@border3: 3px solid @ff7500;

@dotBorder:1px dotted #dedede;//设置项虚线边框

/* 背景颜色 */
@backgroundColor01: coral;
@backgroundColor02: dodgerblue;
@backgroundColor03: white;
@backgroundColor04: #ffb3a7;
@backgroundColor05: black;

/*  公共样式  */
//选中状态颜色
.choiceColor {
  color: rgb(255,255,255) !important;
  background-color: rgb(74,177,167) !important;
  cursor: pointer;
}
//划过状态颜色
.choiceColor:hover {
  background-color: #347c75!important;
}


/*  family 样式  */
.zm-edit-components-Family{
  height: 61px;
  .zm-edit-text-title{
    height: 60px;
    line-height: 60px;
    float: left;
  }
  .zm-edit-components-Family-wrap{
    float: left;
    margin-top: 15px;
  }
}
/*  阴影组件  */
.zm-edit-components-shadow{
  height: 301px;
  position: relative;
  &>div{
    width: 100%;
    height: 60px;
  }
  .zm-edit-components-shadow-O{
    .zm-edit-text-title{
      height: 60px;
      line-height: 60px;
      vertical-align: middle;
    }
    label{
      vertical-align: middle;
    }
  }
  .zm-edit-components-shadow-W{
    height: 240px;
    background-color: rgba(255,255,255,.9);
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 555;
  }
}
/* 下拉框样式 */
.zm-edit-components-select{
  height: 30px;
  border: 1px solid #ccc;
  border-radius: 5px;
  position: relative;
  cursor: pointer;
  .zm-edit-components-select-show{
    width: 100%;
    height: 28px;
    display: flex;
    .zm-edit-components-select-val{
      flex: 1;
      width: 100%;
      line-height: 28px;
      padding: 0 10px;
      overflow: hidden;

    }
    .zm-edit-components-select-icon{
      width: 20px;
      line-height: 30px;
      text-align: center;
    }
  }
  .zm-edit-components-select-hide{
    width: 100%;
    height: 150px;
    box-shadow: 0 0 10px #ccc;
    background-color: #fff;
    z-index: 666;
    border-radius: 5px;
    position: absolute;
    top: 30px;
    left: 0;
    overflow: hidden;
    display: none;
    li{
      width: 100%;
      height: 30px;
      line-height: 30px;
      padding: 0 10px;
    }
    li:hover{
      background-color: #4ab1a7;
    }
  }

  .zm-edit-components-family-val{
    position: absolute;
    top: 0;
    left: 0;
    display: inline-block;
    width: 80%;
    height: 28px;
    padding-left: 10px;
    overflow: hidden;
  }
  .zm-edit-components-family-icon{
    position: absolute;
    top: 0;
    right: 0;
    display: inline-block;
    width: 20%;
    height: 28px;
    line-height: 25px;
    text-align: center;
  }
  .zm-edit-components-family-list{
    position: absolute;
    top: 28px;
    left: 0;
    width: 100%;
    height: 270px;
    background-color: #fff;
    z-index: 6666;
    border-radius: 5px;
    box-shadow: 0 0 10px 0 #eee;
    overflow-y: auto;
    border: @border-grey;
    display: none;
    li{
      width: 100%;
      height: 31px;
      border-bottom: @dotBorder;
      line-height: 30px;
      padding-left: 10px;
    }
    li:hover{
      background-color: #00c3b0;
    }
  }
}
.zm-edit-components-bold{
  width: 30px;
  height: 30px;
  border-radius: 5px;
  position: relative;
  cursor: pointer;
  overflow: hidden;
  i{
    display: inline-block;
    width: 30px;
    height: 30px;
    position: absolute;
    top: 0;
    left: 0;
    line-height: 30px;
    text-align: center;
    font-size: 18px;
  }
  i:hover{
    background-color: #efefef;
  }
}
.zm-edit-components-italic{
  width: 30px;
  height: 30px;
  border-radius: 5px;
  overflow: hidden;
  position: relative;
  cursor: pointer;
  i{
    display: inline-block;
    width: 30px;
    height: 30px;
    position: absolute;
    top: 0;
    left: 0;
    line-height: 30px;
    text-align: center;
    font-size: 18px;
  }
  i:hover{
    background-color: #efefef;
  }
}
.zm-edit-components-colorPicker{
  width: 30px;
  height: 30px;
  position: relative;
  border-radius: 5px;
  cursor: pointer;
  background-image: url("../imgs/index/opacity.png");
  .zm-edit-components-colorPicker-option{
    display: inline-block;
    width: 30px;
    height: 30px;
    border-radius: 5px;
  }
  .zm-edit-components-colorPicker-option:hover{
    box-shadow: 0 0 5px rgb(74,177,167);
  }
}
.zm-edit-components-fontStyle{
  height: 30px;
  &>div{
    float: left;
  }
  &>div:nth-child(1){
    width: 100px;
    height: 30px;
    margin-right: 1px;
  }
  &>div:nth-child(2){
    width: 65px;
    height: 30px;
    margin-right: 10px;
  }
  &>div:nth-child(3){
    width: 30px;
    height: 30px;
    margin-right: 10px;
  }
  &>div:nth-child(4){
    width: 30px;
    height: 30px;
    margin-right: 10px;
  }
  &>div:nth-child(5){
    width: 30px;
    height: 30px;
  }
}
.zm-edit-components-public-style{
  height: 61px;
  overflow: hidden;
  .zm-edit-text-title{
    height: 60px;
    line-height: 60px;
    float: left;
  }
  .sliderWrap{
    float: left;
  }
  .colorWrap{
    float: right;
    margin-top: 15px;
  }
  i{
    display: inline-block;
    height: 60px;
    float: left;
    line-height: 60px;
  }
}


//设置弹窗样式
.zm-edit-component-open-popup{
  height: auto;
  &>div:nth-child(1){
    width: 100%;
    height: 40px;
    .zm-edit-text-title{
      width: 76px;
      height: 40px;
      line-height: 40px;
      float: left;
    }
    .zm-edit-popup-onOff{
      width: 130px;
      height: 40px;
      float: left;
      .zm-switch-box{
        margin-top: 10px;
      }
    }
    .zm-edit-popup-setting{
      width: 80px;
      height: 40px;
      float: left;
      span{
        display: block;
        width: 60px;
        height: 20px;
        line-height: 20px;
        border-radius: 10px;
        margin-top: 10px;
        margin-left: 20px;
        background-color: #eee;
        text-align: center;
      }
    }
  }
  &>div:nth-child(2){
    width: 100%;
    height: auto;
    .zm-edit-popup-list{
      width: 100%;
      height: auto;
      li{
        width: 100%;
        height: 20px;
        line-height: 20px;
        i{
          display: inline-block;
          width: 20px;
          height: 20px;
          text-align: center;
          vertical-align: middle;
          color: #4AB1A7;
          line-height: 20px;
        }
        span{
          display: inline-block;
          overflow: hidden;
          width: 266px;
          height: 20px;
          vertical-align: middle;
        }
      }
    }
  }
}
//列表样式
.zm-edit-components-list{
  font-size: 12px;
  background-color: #f5f5f5;
  overflow: hidden;
  padding: 5px 5px 50px;
  position: relative;
  .zm-edit-components-list-wrap{
    width: 100%;
    height: 100%;
    overflow: hidden;
    li{
      display: flex;
      overflow: hidden;
      .zm-edit-components-list-unit{
        flex: 1;
        min-width: 180px;
        margin-right: 10px;
        margin-bottom: 10px;
        background-color: #fff;
        box-shadow: 0 0 0 rgba(0,0,0,1);
        padding: 10px;
        overflow: hidden;
        .zm-edit-components-list-unit-image{
          width: 100%;
          height: auto;
          overflow: hidden;
          .zm-edit-components-list-unit-image-box{
            width: 100%;
            height: 0;
            padding-bottom: 100%;
            position: relative;
            overflow: hidden;
            .zm-edit-components-list-unit-image-wrap{
              width: 100%;
              height: 100%;
              position: absolute;
              top: 0;
              left: 0;
              overflow: hidden;
              .zm-edit-components-list-unit-image-layer{
                width: 100%;
                height: 100%;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%,-50%);
                overflow: hidden;
              }
            }
          }
        }
      }
      .zm-edit-components-list-unit:last-child{
        margin-right: 0!important;
      }
    }
  }
  .zm-edit-components-list-loadMore{
    width: 100%;
    height: 50px;
    position: absolute;
    bottom: 0;
    left: 0;
    overflow: hidden;
    span{
      display: block;
      width: 120px;
      height: 35px;
      background-color: #4ab3a5;
      color: #fff;
      font-family: "Arial";
      font-size: 16px;
      border-radius: 20px;
      line-height: 35px;
      text-align: center;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      cursor: pointer;
    }
  }
  .set_border{
    border: 1px solid #4ab3a5;
  }
}






